{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "presentation": {
        "reveal": "always",
        "group": "Sever",
        "close": false
      },
      "options": {
        "statusbar": {
          "label": "$(console) start:prod"
        }
      },
      "script": "start:prod",
      "label": "start:prod",
    },
    {
      "type": "npm",
      "presentation": {
        "reveal": "always",
        "group": "Sever",
        "close": false
      },
      "options": {
        "statusbar": {
          "label": "$(console) start:dev"
        }
      },
      "script": "start:dev",
      "label": "start:dev",
    },
    {
      "type": "eslint",
      "runOptions": {
        "runOn": "folderOpen",
        "reevaluateOnRerun": true,
        "instanceLimit": 1
      },
      "presentation": {
        "reveal": "never",
        "group": "Task",
        "close": true
      },
      "problemMatcher": [
        "$eslint-stylish"
      ],
      "options": {
        "statusbar": {
          "label": "$(debug) eslint: lint project"
        }
      },
      "label": "eslint: lint project"
    },
    {
      "type": "npm",
      "presentation": {
        "reveal": "never",
        "group": "Task",
        "close": true,
      },
      "options": {
        "statusbar": {
          "label": "$(console) sass: compile"
        }
      },
      "script": "sass: compile",
      "label": "sass: compile",
    },
    {
      "type": "npm",
      "runOptions": {
        "runOn": "folderOpen",
        "reevaluateOnRerun": true,
        "instanceLimit": 1
      },
      "presentation": {
        "reveal": "never",
        "group": "Task",
      },
      "options": {
        "statusbar": {
          "hide": true
        }
      },
      "script": "sass: watch",
      "label": "sass: watch"
    },
    {
      "type": "shell",
      "presentation": {
        "reveal": "never",
        "group": "Task",
      },
      "command": ".github/docs/index.html",
      "options": {
        "statusbar": {
          "hide": false,
          "label": "$(book) docs: view"
        }
      },
      "label": "docs: view"
    }
  ]
}
