<span class="wrapper">
  <a class="image" href="{{path}}">
    <img src="{{path}}" />
  </a>
  {{#if_either_eq uploaded_by @root.album.uploaded_by @session.username this}}
    <div class="actions">
      <a class="action__delete" title="Delete this Image" data-id="/f/{{id}}" data-username="{{uploaded_by}}">
        <i class="icon-trash"></i>
      </a>
    </div>
  {{/if_either_eq}}
</span>
<link rel="stylesheet" href="/css/partials/image.css" />
<script type="module"  src="/js/partials/image.js" defer></script>
