<!DOCTYPE html>
<html>
  <head>
    {{> head}}
    <link href="/css/home.css" rel="stylesheet" />
    <script type="module" src="/js/home.js" defer></script>
  </head>
  <body>
    {{> themeToggle}}
    <div id="content">
      {{> logo}}
      {{> dropzone}}
      <div id="buttons">
        {{#if @authenticated}}
          <div id="uploadsBtn" class="button">
            <a href="/u/{{@session.username}}">Uploads</a>
          </div>
          <div id="settingsBtn" class="button">Settings</div>
          <div id="logoutBtn" class="button">
            <a href="/logout">Logout</a>
          </div>
        {{else}}
          <div id="loginBtn" class="button">
            <a href="/login">Login</a>
          </div>
          <div id="signupBtn" class="button">
            <a href="/signup">Sign up</a>
          </div>
        {{/if}}
      </div>
      <div id="settings" class="hidden invisible">
        <div class="setting">
          <span>Copy Link to Clipboard</span>
          <label class="switch">
            <input id="copyLinkToClipboard" type="checkbox" />
            <div class="slider">
            </div>
          </label>
        </div>
        <div class="setting">
          <span>Copy Direct Links</span>
          <label class="switch">
            <input id="copyDirectFileLinks" type="checkbox" />
            <div class="slider">
            </div>
          </label>
        </div>
        <div class="setting">
          <span>Private Upload</span>
          <label class="switch">
            <input id="isPrivate" type="checkbox" />
            <div class="slider">
            </div>
          </label>
        </div>
        <div class="setting">
          <span>Don't form Album</span>
          <label class="switch">
            <input id="dontFormAlbum" type="checkbox" />
            <div class="slider">
            </div>
          </label>
        </div>
        <div class="setting">
          <span>Keep for</span>
          <select id="timeToLive">
            <option value="0" selected>Permanently</option>
            <option value="600000">10 Minutes</option>
            <option value="3600000">1 Hour</option>
            <option value="86400000">1 Day</option>
            <option value="604800000">1 Week</option>
          </select>
        </div>
      </div>
    </div>
    <div id="footer">
      <a href="https://github.com/cmd430/stash.red">
        <svg viewBox="0 0 16 16" version="1.1">
          <path fill-rule="evenodd" d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0 0 16 8c0-4.42-3.58-8-8-8z"></path>
        </svg>
      </a>
    </div>
  </body>
</html>
