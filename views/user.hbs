<!DOCTYPE html>
<html>
  <head>
    {{> head}}
    <link rel="stylesheet" href="/css/user.css" />
  </head>
  <body>
    {{> themeToggle}}
    <header>
      {{> logo}}
      <h1>
        <a href="info/">{{view.username}}</a>
      </h1>
    </header>
    <nav>
      {{#if_eq view.type 'albums' this}}
        <a href="..">Files</a>
        <a class="active">Albums</a>
      {{else}}
        <a class="active">Files</a>
        <a href="albums/">Albums</a>
      {{/if_eq}}
    </nav>
    <main>
      <section>
        {{#each uploads}}
          {{> preview this}}
        {{/each}}
        {{#repeat 5}}
          <div class="spacer"></div>
        {{/repeat}}
      </section>
      <nav>
        {{> paginator}}
      </nav>
    </main>
  </body>
</html>
