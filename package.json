{
  "name": "stash.red",
  "description": "stash.red is a Small footprint file host (specificly for image/video and audio files)",
  "version": "2.0.0",
  "author": "Bradley 'cmd430' Treweek",
  "license": "MIT",
  "private": true,
  "main": "loader.js",
  "scripts": {
    "start": "node loader.js",
    "debug": "nodemon loader.js --logLevel=error --env=dev"
  },
  "nodemonConfig": {
    "quiet": true,
    "verbose": false,
    "ignore": [
      "storage/*",
      "docs/*",
      "node_modules/*"
    ],
    "ext": "js,json,json5,hbs"
  },
  "dependencies": {
    "bcrypt": "^3.0.7",
    "better-sqlite3": "^5.4.3",
    "better-sqlite3-helper": "^2.1.1",
    "chalk": "^3.0.0",
    "compression": "^1.7.4",
    "connect-busboy": "0.0.2",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "esm": "^3.2.25",
    "express": "^4.17.3",
    "express-compile-sass": "git+https://git@github.com/cmd430/express-compile-sass.git",
    "express-easy-zip": "^1.1.4",
    "express-request-id": "^1.4.1",
    "express-session": "^1.17.0",
    "express-sqlite3": "git+https://github.com/cmd430/express-sqlite3.git",
    "express-subdomain": "^1.0.5",
    "express-svg-captcha": "^1.0.1",
    "ffmpeg-static": "^2.7.0",
    "handlebars-paginate": "^0.1.0",
    "hbs": "^4.0.6",
    "http-errors": "^1.7.3",
    "jsmediatags": "^3.9.3",
    "json5": "^2.1.1",
    "md5": "^2.2.1",
    "minimist2": "^1.0.2",
    "mkdirp": "^0.5.1",
    "morgan": "^1.9.1",
    "nanoid": "^2.1.7",
    "node-sass": "^4.13.0",
    "serve-favicon": "^2.5.0",
    "sharp": "^0.23.3",
    "simple-thumbnail": "^1.6.1",
    "stream-signature": "^1.0.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.1"
  }
}
